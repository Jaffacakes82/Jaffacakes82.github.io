extends layout

block content
    ul.bg-slideshow
        li
            span
        li
            span
        li
            span
        li
            span
        li
            span

    .container-fluid
        .row
            .col-md-6.col-md-offset-3
                .narrow-column
                    .button-container
                        #me.tooltips.btn.btn-xl.btn-lg(title='Me')
                            .icon-container
                                i.fa.fa-user.fa-5
                        #skills.tooltips.btn.btn-xl.btn-lg(title='Skills')
                            .icon-container
                                i.fa.fa-wrench.fa-5
                    .button-container
                        #career.tooltips.btn.btn-xl.btn-lg(title='Career')
                            .icon-container
                                i.fa.fa-briefcase.fa-5
                        #education.tooltips.btn.btn-xl.btn-lg(title='Education')
                            .icon-container
                                i.fa.fa-graduation-cap.fa-5
        .row
            .col-md-6.col-md-offset-3
                #shorten-url
                    form(method='POST', action='/')
                        .input-group
                            .input-group-btn
                                button.btn-https.btn.btn-default.dropdown-toggle(type='button', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false')
                                    span HTTPS &nbsp;
                                        i.fa.fa-lock
                                button.btn-http.btn.btn-default.dropdown-toggle(type='button', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false')
                                    span HTTP &nbsp;
                                        i.fa.fa-unlock-alt
                                ul.dropdown-menu
                                    li
                                        a#http-action(href='#') HTTP
                                    li
                                        a#https-action(href='#') HTTPS
                            input.form-control(type='text', name='originalUrl')
                            span.input-group-btn
                                button.btn.btn-default(type='submit')
                                    i.fa.fa-magic
                        input(id='chosen-protocol', name='chosenProtocol', type='hidden', value='https://')
                    input(type='hidden', id='successful-shorten', value='#{success}')
                    input(type='hidden', id='url-value', value='#{value}')

footer.footer
